# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Skopiuj ten plik do .env.production i wypełnij wartościami

# ============================================
# DATABASE (PostgreSQL)
# ============================================
POSTGRES_USER=palkamtm_user
POSTGRES_PASSWORD=WYGENERUJ_SILNE_HASŁO
POSTGRES_DB=palkamtm_production
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# ============================================
# REDIS (Cache)
# ============================================
REDIS_PASSWORD=WYGENERUJ_SILNE_HASŁO_REDIS
REDIS_URL=redis://default:${REDIS_PASSWORD}@redis:6379

# ============================================
# NEXT.JS
# ============================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://palkamtm.pl
NEXT_TELEMETRY_DISABLED=1

# ============================================
# NEXTAUTH
# ============================================
NEXTAUTH_URL=https://palkamtm.pl
NEXTAUTH_SECRET=WYGENERUJ_LOSOWY_STRING_MIN_32_ZNAKI

# ============================================
# FIREBASE (Client - Public)
# ============================================
NEXT_PUBLIC_FIREBASE_API_KEY=twoj_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=twoj-projekt.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=twoj-projekt-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=twoj-projekt.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef123456

# ============================================
# FIREBASE (Admin - Server)
# ============================================
FIREBASE_PROJECT_ID=twoj-projekt-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@twoj-projekt.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nTwoj klucz prywatny\n-----END PRIVATE KEY-----\n"
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# ============================================
# EMAIL (SMTP)
# ============================================
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=twoj@email.com
EMAIL_SERVER_PASSWORD=twoje_haslo_aplikacji
EMAIL_FROM=noreply@palkamtm.pl
CONTACT_EMAIL=kontakt@palkamtm.pl

# ============================================
# SMS (Opcjonalne - Firebase lub Twilio)
# ============================================
SMS_PROVIDER=firebase
# Jeśli używasz Twilio zamiast Firebase:
# TWILIO_ACCOUNT_SID=ACxxxxxxxxx
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=+48xxxxxxxxx

# ============================================
# MONITORING (Grafana)
# ============================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=ZMIEN_DOMYSLNE_HASLO
