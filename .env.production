# ============================================
# PRODUCTION ENVIRONMENT VARIABLES - Docker
# ============================================
# Docker production configuration with all services

# ============================================
# DATABASE (PostgreSQL)
# ============================================
POSTGRES_USER=auctions_user
POSTGRES_PASSWORD=secure_password_123
POSTGRES_DB=auctions
DATABASE_URL=postgresql://auctions_user:secure_password_123@postgres:5432/auctions

# ============================================
# REDIS (Cache)
# ============================================
REDIS_PASSWORD=secure_password_123
REDIS_URL=redis://default:secure_password_123@redis:6379

# ============================================
# NEXT.JS
# ============================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_TELEMETRY_DISABLED=1

# ============================================
# NEXTAUTH
# ============================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=super_secret_key_min_32_characters_long_for_production_environment_docker

# ============================================
# FIREBASE (Client - Public)
# ============================================
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef123456

# ============================================
# FIREBASE (Admin - Server)
# ============================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# ============================================
# EMAIL (SMTP)
# ============================================
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your@email.com
EMAIL_SERVER_PASSWORD=your_app_password
EMAIL_FROM=noreply@palkamtm.pl
CONTACT_EMAIL=kontakt@palkamtm.pl

# ============================================
# SMS (Optional - Firebase or Twilio)
# ============================================
SMS_PROVIDER=firebase
# If using Twilio instead of Firebase:
# TWILIO_ACCOUNT_SID=ACxxxxxxxxx
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=+48xxxxxxxxx

# ============================================
# MONITORING (Grafana)
# ============================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=secure_grafana_password

# ============================================
# PROMETHEUS METRICS
# ============================================
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_METRICS_PORT=9091

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# PERFORMANCE MONITORING
# ============================================
PERFORMANCE_MONITORING_ENABLED=true
MEMORY_MONITORING_ENABLED=true
CPU_MONITORING_ENABLED=true

# ============================================
# SECURITY
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAME_SITE=lax

# ============================================
# EXTERNAL SERVICES
# ============================================
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here
SENTRY_DSN=your_sentry_dsn_here

# ============================================
# DEVELOPMENT/DEBUG (Docker)
# ============================================
DEBUG=false
DEV_MODE=false
