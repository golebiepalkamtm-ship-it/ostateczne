# ============================================
# LOCAL DEVELOPMENT ENVIRONMENT VARIABLES EXAMPLE
# ============================================
# Copy this file to .env.local for local Vercel CLI development
# This file is used when running `vercel dev` locally

# ============================================
# VERCEL CLI CONFIGURATION
# ============================================
# These are automatically set by Vercel CLI - do not modify
# NX_DAEMON="false"
# TURBO_CACHE="remote:rw"
# TURBO_DOWNLOAD_LOCAL_ENABLED="true"
# TURBO_REMOTE_ONLY="true"
# TURBO_RUN_SUMMARY="true"
# VERCEL="1"
# VERCEL_ENV="development"
# VERCEL_GIT_COMMIT_AUTHOR_LOGIN=""
# VERCEL_GIT_COMMIT_AUTHOR_NAME=""
# VERCEL_GIT_COMMIT_MESSAGE=""
# VERCEL_GIT_COMMIT_REF=""
# VERCEL_GIT_COMMIT_SHA=""
# VERCEL_GIT_PREVIOUS_SHA=""
# VERCEL_GIT_PROVIDER=""
# VERCEL_GIT_PULL_REQUEST_ID=""
# VERCEL_GIT_REPO_ID=""
# VERCEL_GIT_REPO_OWNER=""
# VERCEL_GIT_REPO_SLUG=""
# VERCEL_OIDC_TOKEN=""
# VERCEL_TARGET_ENV="development"
# VERCEL_URL=""

# ============================================
# BAZA DANYCH - SUPABASE POSTGRESQL
# ============================================
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:6543/postgres?pgbouncer=true&connection_limit=1"
DIRECT_DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres"

# ============================================
# NEXT.JS & NEXTAUTH - LOCAL DEVELOPMENT
# ============================================
NEXT_PUBLIC_BASE_URL="http://localhost:3001"
NEXT_PUBLIC_ASSET_BASE_URL="https://storage.googleapis.com/YOUR_FIREBASE_BUCKET.firebasestorage.app"
NEXTAUTH_URL="http://localhost:3001"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# ============================================
# SUPABASE
# ============================================
NEXT_PUBLIC_SUPABASE_URL="https://YOUR_PROJECT.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key-here"

# ============================================
# FIREBASE CLIENT SDK (Publiczne - widoczne w przeglÄ…darce)
# ============================================
NEXT_PUBLIC_FIREBASE_API_KEY="your-firebase-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="YOUR_PROJECT.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="YOUR_PROJECT"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="YOUR_PROJECT.firebasestorage.app"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-messaging-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="1:your-app-id:web:your-web-app-id"
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID="G-XXXXXXXXXX"

# ============================================
# FIREBASE ADMIN SDK (Serwer)
# ============================================
FIREBASE_PROJECT_ID="YOUR_PROJECT"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-fbsvc@YOUR_PROJECT.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# ============================================
# REDIS (Cache) - LOCAL DEV
# ============================================
REDIS_URL="redis://:redis123@localhost:6380"

# ============================================
# EMAIL (SMTP)
# ============================================
EMAIL_SERVER_HOST="your-smtp-host.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@domain.com"
EMAIL_SERVER_PASSWORD="your-email-password"
EMAIL_FROM="noreply@yourdomain.com"
CONTACT_EMAIL="contact@yourdomain.com"

# ============================================
# SMS & AUTH
# ============================================
SMS_PROVIDER="firebase"
NEXT_PUBLIC_RECAPTCHA_SITE_KEY="your-recaptcha-site-key"
RECAPTCHA_SITE_KEY_IOS="your-ios-recaptcha-key"
RECAPTCHA_SITE_KEY_ANDROID="your-android-recaptcha-key"

# ============================================
# TELEMETRY
# ============================================
NEXT_TELEMETRY_DISABLED="1"

# ============================================
# OPTIONAL: MONITORING (Sentry)
# ============================================
# NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
# SENTRY_AUTH_TOKEN="your-sentry-auth-token"
